{
  "expo": {
    "name": "qrapp-halit-2",
    "slug": "qrapp-halit-2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/a101logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/a101logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/a101logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.halitdip.qrapphalit2"
    },
    "web": {
      "favicon": "./assets/a101logo.png"
    },
    "infoPlist": {
      "NSCameraUsageDescription": "This app uses the camera to scan barcodes on event tickets."
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      "expo-asset"
    ],
    "extra": {
      "eas": {
        "projectId": "c3adf79e-d74e-4f60-9cdc-5b70fa9cc02a"
      }
    }
  }
}
